<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC6_MOD1_ACTIVITY02.View.PageView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Student ID"/>
            <Entry Text="{Binding Info.StudentId }"/>
            <Label Text="Name"/>
            <Entry Text="{Binding Info.Name}"/>
            <Label Text="Course Code"/>
            <Entry Text="{Binding Info.CourseCode}"/>
            <Label Text="Course Title"/>
            <Entry Text="{Binding Info.CourseTitle}"/>
            <Label Text="No of Units"/>
            <Entry Text="{Binding Info.Noofunits}"/>
            <Label Text="Date"/>
            <Entry Text="{Binding Info.Date}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>